<Window x:Class="MedicalAir.Helper.Dialogs.EditMedicalExaminationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование медосмотра"
        Icon="pack://application:,,,/icon.png"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="White"
            CornerRadius="15"
            Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="450">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock"
                       Text="Редактирование медосмотра"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#f5576c"
                       Grid.Row="0"
                       Margin="0,0,0,25"/>

            <TextBlock Text="Дата начала:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="1"
                       Margin="0,0,0,8"/>
            <DatePicker x:Name="DataStartPicker"
                        Grid.Row="2"
                        FontSize="14"
                        Padding="12,10"
                        BorderBrush="#ddd"
                        BorderThickness="1"
                        Margin="0,0,0,15">
                <DatePicker.Style>
                    <Style TargetType="DatePicker">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DatePicker.Style>
            </DatePicker>

            <TextBlock Text="Дата окончания:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="3"
                       Margin="0,0,0,8"/>
            <DatePicker x:Name="DataEndPicker"
                        Grid.Row="4"
                        FontSize="14"
                        Padding="12,10"
                        BorderBrush="#ddd"
                        BorderThickness="1"
                        Margin="0,0,0,15">
                <DatePicker.Style>
                    <Style TargetType="DatePicker">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DatePicker.Style>
            </DatePicker>

            <TextBlock Text="Сообщение (необязательно):"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="5"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="MessageTextBox"
                     Grid.Row="6"
                     FontSize="14"
                     Padding="12,10"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     MinHeight="60"
                     MaxHeight="120"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,30">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <StackPanel Grid.Row="7"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="OkButton"
                        Content="Сохранить"
                        Width="120"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="#f5576c"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="OkButton_Click"
                        IsDefault="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f5576c"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e4465a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Отмена"
                        Width="120"
                        Height="40"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CancelButton_Click"
                        IsCancel="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        </ScrollViewer>
    </Border>
</Window>

