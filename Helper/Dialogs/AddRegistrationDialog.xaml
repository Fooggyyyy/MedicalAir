<Window x:Class="MedicalAir.Helper.Dialogs.AddRegistrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:entities="clr-namespace:MedicalAir.Model.Entites"
        Title="Добавление регистрации"
        Icon="pack://application:,,,/icon.png"
        Height="550" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="White"
            CornerRadius="15"
            Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock"
                       Text="Добавление регистрации"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#f5576c"
                       Grid.Row="0"
                       Margin="0,0,0,25"/>

            <!-- Пользователь -->
            <TextBlock Text="Пользователь:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="1"
                       Margin="0,0,0,8"/>
            <ComboBox x:Name="UserComboBox"
                      Grid.Row="2"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="Id"
                      FontSize="14"
                      Padding="12,10"
                      BorderBrush="#ddd"
                      BorderThickness="1"
                      Margin="0,0,0,15">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>

            <!-- Самолет -->
            <TextBlock Text="Самолет:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="3"
                       Margin="0,0,0,8"/>
            <ComboBox x:Name="AirplaneComboBox"
                      Grid.Row="4"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      FontSize="14"
                      Padding="12,10"
                      BorderBrush="#ddd"
                      BorderThickness="1"
                      Margin="0,0,0,15">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>

            <!-- Дата -->
            <TextBlock Text="Дата:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="5"
                       Margin="0,0,0,8"/>
            <DatePicker x:Name="DatePicker"
                        Grid.Row="6"
                        FontSize="14"
                        Padding="12,10"
                        BorderBrush="#ddd"
                        BorderThickness="1"
                        Margin="0,0,0,15">
                <DatePicker.Style>
                    <Style TargetType="DatePicker">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DatePicker.Style>
            </DatePicker>

            <!-- Сообщение -->
            <TextBlock Text="Сообщение (необязательно):"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="7"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="MessageTextBox"
                     Grid.Row="8"
                     FontSize="14"
                     Padding="12,10"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     MinHeight="80"
                     Margin="0,0,0,20"
                     VerticalScrollBarVisibility="Auto">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Кнопки -->
            <StackPanel Grid.Row="9"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="OkButton"
                        Content="Добавить"
                        Width="120"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="#f5576c"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="OkButton_Click"
                        IsDefault="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f5576c"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e4465a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Отмена"
                        Width="120"
                        Height="40"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CancelButton_Click"
                        IsCancel="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

