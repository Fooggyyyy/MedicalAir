<Window x:Class="MedicalAir.Helper.Dialogs.ModernMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Уведомление"
        Icon="pack://application:,,,/icon.png"
        Height="200" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    <Border Background="White"
            CornerRadius="12"
            Padding="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок с иконкой -->
            <Border Grid.Row="0"
                    Background="#F3F3F3"
                    CornerRadius="12,12,0,0"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="IconTextBlock"
                               Grid.Column="0"
                               FontSize="24"
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="TitleTextBlock"
                               Grid.Column="1"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#333"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Сообщение -->
            <TextBlock x:Name="MessageTextBlock"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="#666"
                       Margin="20,20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>

            <!-- Кнопки -->
            <Border Grid.Row="2"
                    Background="#F9F9F9"
                    CornerRadius="0,0,12,12"
                    Padding="20,15">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="OkButton"
                            Content="OK"
                            Width="100"
                            Height="36"
                            Background="#667eea"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="OkButton_Click"
                            IsDefault="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#667eea"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5568d3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="YesButton"
                            Content="Да"
                            Width="100"
                            Height="36"
                            Margin="10,0,0,0"
                            Background="#10b981"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="YesButton_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#10b981"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="NoButton"
                            Content="Нет"
                            Width="100"
                            Height="36"
                            Margin="10,0,0,0"
                            Background="#ef4444"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="NoButton_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ef4444"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#dc2626"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

