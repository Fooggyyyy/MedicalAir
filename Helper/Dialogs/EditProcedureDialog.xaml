<Window x:Class="MedicalAir.Helper.Dialogs.EditProcedureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование процедуры"
        Icon="pack://application:,,,/icon.png"
        Height="550" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="White"
            CornerRadius="15"
            Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="550">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock"
                       Text="Редактирование процедуры"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#f5576c"
                       Grid.Row="0"
                       Margin="0,0,0,25"/>

            <!-- Название -->
            <TextBlock Text="Название процедуры:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="1"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="NameTextBox"
                     Grid.Row="2"
                     FontSize="14"
                     Padding="12,10"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     Margin="0,0,0,15">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Описание -->
            <TextBlock Text="Описание:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="3"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="DescriptionTextBox"
                     Grid.Row="4"
                     FontSize="14"
                     Padding="12,10"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     MinHeight="80"
                     Margin="0,0,0,15"
                     VerticalScrollBarVisibility="Auto">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#f5576c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Мин/Макс значения и Ед. измерения -->
            <Grid Grid.Row="5" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Мин. значение:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Grid.Row="0" Grid.Column="0"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="MinValueTextBox"
                         Grid.Row="1" Grid.Column="0"
                         FontSize="14"
                         Padding="12,10"
                         BorderBrush="#ddd"
                         BorderThickness="1"
                         Margin="0,0,10,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderBrush" Value="#ddd"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#f5576c"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Макс. значение:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Grid.Row="0" Grid.Column="1"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="MaxValueTextBox"
                         Grid.Row="1" Grid.Column="1"
                         FontSize="14"
                         Padding="12,10"
                         BorderBrush="#ddd"
                         BorderThickness="1"
                         Margin="0,0,10,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderBrush" Value="#ddd"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#f5576c"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Ед. измерения:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Grid.Row="0" Grid.Column="2"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UnitsTextBox"
                         Grid.Row="1" Grid.Column="2"
                         FontSize="14"
                         Padding="12,10"
                         BorderBrush="#ddd"
                         BorderThickness="1">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderBrush" Value="#ddd"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#f5576c"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>

            <!-- Тип процедуры -->
            <TextBlock Text="Тип процедуры:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Grid.Row="6"
                       Margin="0,0,0,8"/>
            <CheckBox x:Name="MustBeTrueCheckBox"
                      Grid.Row="7"
                      Content="Тест"
                      FontSize="14"
                      Margin="0,0,0,20"
                      Checked="MustBeTrueCheckBox_Checked"
                      Unchecked="MustBeTrueCheckBox_Unchecked"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="8"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="OkButton"
                        Content="Сохранить"
                        Width="120"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="#f5576c"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="OkButton_Click"
                        IsDefault="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f5576c"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e4465a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Отмена"
                        Width="120"
                        Height="40"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CancelButton_Click"
                        IsCancel="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        </ScrollViewer>
    </Border>
</Window>

