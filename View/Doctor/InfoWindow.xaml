<Window x:Class="MedicalAir.View.Doctor.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalAir.View.Doctor"
        mc:Ignorable="d"
        Title="MedicalAir - Информация"
        Icon="pack://application:,,,/icon.png"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">
    <Grid>
        <!-- Верхняя панель -->
        <Border Background="#F3F3F3"
                Height="50"
                VerticalAlignment="Top"
                BorderBrush="#D0D0D0"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0">
                    <TextBlock Text="MedicalAir"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#48bb78"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" - Информация"
                               FontSize="18"
                               Foreground="#666"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <Button x:Name="LogoutButton"
                        Grid.Column="1"
                        Content="🚪 Выйти из аккаунта"
                        Width="180"
                        Height="40"
                        Margin="0,0,30,0"
                        Background="#f56565"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="LogoutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f56565"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e53e3e"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Боковая панель навигации -->
        <Border Background="White"
                Width="250"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                Margin="0,70,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Margin="15,20,15,20">
                <TextBlock Text="Навигация"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#48bb78"
                           Margin="0,0,0,20"/>
                
                <Button x:Name="MainPageButton"
                        Content="🏠 Главная"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MainPageButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="InfoButton"
                        Content="ℹ️ Информация"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#48bb78"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#48bb78"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#38a169"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="CertificatButton"
                        Content="📜 Сертификаты"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CertificatButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="MedicalExaminationButton"
                        Content="🏥 Медосмотры"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MedicalExaminationButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="MedicamentsProcedureButton"
                        Content="💊 Процедуры с лекарствами"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MedicamentsProcedureButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="ReportButton"
                        Content="📊 Отчеты"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="ReportButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="SendNotificationButton"
                        Content="📨 Отправить уведомление"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="SendNotificationButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Основной контент -->
        <Grid Margin="280,90,20,20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TabControl BorderThickness="0" Background="Transparent">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="Opacity" Value="0.6"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#48bb78"/>
                                <Setter Property="Opacity" Value="1.0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <!-- История пополнений лекарств -->
                <TabItem Header="💊 История пополнений лекарств">
                    <Border Background="White" Padding="15" CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DataGrid ItemsSource="{Binding HistoryUpMedicins}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="All"
                                 AlternatingRowBackground="#F5F7FA">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                                <DataGridTextColumn Header="Количество" Binding="{Binding Count}" Width="100"/>
                                <DataGridTextColumn Header="Дата пополнения" Binding="{Binding UpData, StringFormat='dd.MM.yyyy'}" Width="150"/>
                                <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndData, StringFormat='dd.MM.yyyy'}" Width="150"/>
                                <DataGridCheckBoxColumn Header="Действителен" Binding="{Binding IsValid}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <!-- Медосмотры пилотов -->
                <TabItem Header="✈️ Медосмотры пилотов">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Пройденные медосмотры" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid x:Name="PilotValidExaminationsDataGrid" Grid.Row="1" ItemsSource="{Binding PilotValidExaminations}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="All"
                                 AlternatingRowBackground="#F5F7FA"
                                 Margin="0,0,0,20"
                                 LoadingRow="DataGrid_LoadingRow">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.FullName}" Width="200"/>
                                <DataGridTemplateColumn Header="Процедуры" Width="250">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Tag}" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Дата начала" Binding="{Binding DataStart, StringFormat='dd.MM.yyyy'}" Width="120"/>
                                <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataEnd, StringFormat='dd.MM.yyyy'}" Width="120"/>
                                <DataGridCheckBoxColumn Header="Пройден" Binding="{Binding IsValid}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Не пройденные медосмотры пилотов -->
                <TabItem Header="❌ Не пройденные медосмотры пилотов">
                    <DataGrid x:Name="PilotInvalidExaminationsDataGrid" ItemsSource="{Binding PilotInvalidExaminations}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             HeadersVisibility="Column"
                             GridLinesVisibility="All"
                             AlternatingRowBackground="#F5F7FA"
                             LoadingRow="DataGrid_LoadingRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Пользователь" Binding="{Binding User.FullName}" Width="200"/>
                            <DataGridTemplateColumn Header="Процедуры" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Tag}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Дата начала" Binding="{Binding DataStart, StringFormat='dd.MM.yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataEnd, StringFormat='dd.MM.yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Сообщение" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!-- Медосмотры бортпроводников -->
                <TabItem Header="👥 Медосмотры бортпроводников">
                    <DataGrid x:Name="FlightAttendantValidExaminationsDataGrid" ItemsSource="{Binding FlightAttendantValidExaminations}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             HeadersVisibility="Column"
                             GridLinesVisibility="All"
                             AlternatingRowBackground="#F5F7FA"
                             LoadingRow="DataGrid_LoadingRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Пользователь" Binding="{Binding User.FullName}" Width="200"/>
                            <DataGridTemplateColumn Header="Процедуры" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Tag}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Дата начала" Binding="{Binding DataStart, StringFormat='dd.MM.yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataEnd, StringFormat='dd.MM.yyyy'}" Width="120"/>
                            <DataGridCheckBoxColumn Header="Пройден" Binding="{Binding IsValid}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!-- Не пройденные медосмотры бортпроводников -->
                <TabItem Header="❌ Не пройденные медосмотры бортпроводников">
                    <DataGrid x:Name="FlightAttendantInvalidExaminationsDataGrid" ItemsSource="{Binding FlightAttendantInvalidExaminations}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             HeadersVisibility="Column"
                             GridLinesVisibility="All"
                             AlternatingRowBackground="#F5F7FA"
                             LoadingRow="DataGrid_LoadingRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Пользователь" Binding="{Binding User.FullName}" Width="200"/>
                            <DataGridTemplateColumn Header="Процедуры" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Tag}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Дата начала" Binding="{Binding DataStart, StringFormat='dd.MM.yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataEnd, StringFormat='dd.MM.yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Сообщение" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
