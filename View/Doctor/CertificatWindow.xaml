<Window x:Class="MedicalAir.View.Doctor.CertificatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalAir.View.Doctor"
        mc:Ignorable="d"
        Title="MedicalAir - Сертификаты"
        Icon="pack://application:,,,/icon.png"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">
    <Grid>
        <!-- Верхняя панель -->
        <Border Background="#F3F3F3"
                Height="50"
                VerticalAlignment="Top"
                BorderBrush="#D0D0D0"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0">
                    <TextBlock Text="MedicalAir"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#48bb78"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" - Сертификаты"
                               FontSize="18"
                               Foreground="#666"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <Button x:Name="LogoutButton"
                        Grid.Column="1"
                        Content="🚪 Выйти из аккаунта"
                        Width="180"
                        Height="40"
                        Margin="0,0,30,0"
                        Background="#f56565"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="LogoutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f56565"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e53e3e"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Боковая панель навигации -->
        <Border Background="White"
                Width="250"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                Margin="0,70,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Margin="15,20,15,20">
                <TextBlock Text="Навигация"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#48bb78"
                           Margin="0,0,0,20"/>
                
                <Button x:Name="MainPageButton"
                        Content="🏠 Главная"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MainPageButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="InfoButton"
                        Content="ℹ️ Информация"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="InfoButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="CertificatButton"
                        Content="📜 Сертификаты"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#48bb78"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#48bb78"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#38a169"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="MedicalExaminationButton"
                        Content="🏥 Медосмотры"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MedicalExaminationButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="MedicamentsProcedureButton"
                        Content="💊 Процедуры с лекарствами"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MedicamentsProcedureButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="ReportButton"
                        Content="📊 Отчеты"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="ReportButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="SendNotificationButton"
                        Content="📨 Отправить уведомление"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="SendNotificationButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Основной контент -->
        <Grid Margin="280,90,20,20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель управления -->
            <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,20" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0" 
                             ItemsSource="{Binding PilotsAndAttendants}"
                             SelectedItem="{Binding SelectedUser}"
                             DisplayMemberPath="FullName"
                             Margin="0,0,15,0"
                             Padding="10,8"
                             FontSize="14"/>

                    <DatePicker Grid.Column="1" 
                               SelectedDate="{Binding DataStart}"
                               Margin="0,0,15,0"
                               FontSize="14"/>

                    <DatePicker Grid.Column="2" 
                               SelectedDate="{Binding DataEnd}"
                               Margin="0,0,15,0"
                               FontSize="14"/>

                    <Button Grid.Column="3"
                           Content="➕ Добавить"
                           Command="{Binding AddCertificat}"
                           Width="120"
                           Height="40"
                           Background="#48bb78"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#48bb78"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#38a169"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="4"
                           Content="✏️ Изменить"
                           Command="{Binding UpdateCertificat}"
                           Width="120"
                           Height="40"
                           Background="#667eea"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#667eea"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5568d3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="5"
                           Content="🗑️ Удалить"
                           Command="{Binding DeleteCertificat}"
                           Width="120"
                           Height="40"
                           Background="#f56565"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#f56565"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#e53e3e"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="6"
                           Content="🔄 Обновить статусы"
                           Command="{Binding UpdateStatuses}"
                           Width="180"
                           Height="40"
                           Background="#ed8936"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ed8936"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#dd6b20"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Таблица сертификатов -->
            <Border Grid.Row="1" Background="White" Padding="15" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding SearchCertificats, UpdateSourceTrigger=PropertyChanged}" 
                                 ToolTip="Поиск по пользователю, датам, статусу или ID" 
                                 Padding="10,8" 
                                 FontSize="14" 
                                 Margin="0,0,10,0"/>
                        <Button Grid.Column="1" Content="✕" 
                                Command="{Binding ClearSearchCertificats}" 
                                Width="40" 
                                Height="40" 
                                Background="#f56565" 
                                Foreground="White" 
                                Cursor="Hand"/>
                    </Grid>
                    <DataGrid ItemsSource="{Binding Certificats}"
                         SelectedItem="{Binding SelectedCertificat}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         HeadersVisibility="Column"
                         GridLinesVisibility="All"
                         AlternatingRowBackground="#F5F7FA"
                         SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Пользователь" Binding="{Binding User.FullName}" Width="200"/>
                        <DataGridTextColumn Header="Дата начала" Binding="{Binding DataStart, StringFormat='dd.MM.yyyy'}" Width="120"/>
                        <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataEnd, StringFormat='dd.MM.yyyy'}" Width="120"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="150"/>
                    </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
