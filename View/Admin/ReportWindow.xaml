<Window x:Class="MedicalAir.View.Admin.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalAir.View.Admin"
        mc:Ignorable="d"
        Title="MedicalAir - Статистика"
        Icon="pack://application:,,,/icon.png"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">
    <Grid>
        
        <Border Background="#F3F3F3"
                Height="50"
                VerticalAlignment="Top"
                BorderBrush="#D0D0D0"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0">
                    <TextBlock Text="MedicalAir"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#667eea"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" - Статистика"
                               FontSize="18"
                               Foreground="#666"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <Button x:Name="LogoutButton"
                        Grid.Column="1"
                        Content="🚪 Выйти из аккаунта"
                        Width="180"
                        Height="40"
                        Margin="0,0,30,0"
                        Background="#f56565"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="LogoutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f56565"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e53e3e"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Border Background="White"
                Width="250"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                Margin="0,70,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Margin="15,20,15,20">
                <TextBlock Text="Навигация"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#667eea"
                           Margin="0,0,0,20"/>
                
                <Button x:Name="MainPageButton"
                        Content="🏠 Главная"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MainPageButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="ReportButton"
                        Content="📊 Статистика"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#667eea"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#667eea"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5568d3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        
        <Grid Margin="280,90,20,20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="White"
                    Padding="20"
                    Margin="0,0,0,20"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Период:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <DatePicker Grid.Column="1"
                                SelectedDate="{Binding DateStart}"
                                FontSize="14"
                                Margin="0,0,15,0"/>

                    <TextBlock Grid.Column="2"
                               Text="до"
                               FontSize="16"
                               Foreground="#666"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <DatePicker Grid.Column="3"
                                SelectedDate="{Binding DateEnd}"
                                FontSize="14"
                                Margin="0,0,15,0"/>

                    <Button Grid.Column="5"
                            Content="🔍 Загрузить отчеты"
                            Command="{Binding LoadReports}"
                            Width="180"
                            Height="40"
                            Background="#667eea"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#667eea"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5568d3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <TabControl Grid.Row="1" 
                       BorderThickness="0"
                       Background="Transparent">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="Opacity" Value="0.6"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#667eea"/>
                                <Setter Property="Opacity" Value="1.0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="📊 Отчет по пользователям">
                    <Border Background="White"
                            Padding="15"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DataGrid ItemsSource="{Binding ReportUsers}"
                                 SelectedItem="{Binding SelectedReportUser}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 SelectionMode="Single"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="All"
                                 AlternatingRowBackground="#F5F7FA"
                                 CanUserResizeColumns="True"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата начала" Binding="{Binding DataStart, StringFormat='dd.MM.yyyy'}" Width="120" CanUserResize="True"/>
                                <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataEnd, StringFormat='dd.MM.yyyy'}" Width="120" CanUserResize="True"/>
                                <DataGridTextColumn Header="Всего пользователей" Binding="{Binding TotalUsers}" Width="140" CanUserResize="True"/>
                                <DataGridTextColumn Header="Всего МО" Binding="{Binding TotalUsersME}" Width="100" CanUserResize="True"/>
                                <DataGridTextColumn Header="Прошли" Binding="{Binding Passed}" Width="80" CanUserResize="True"/>
                                <DataGridTextColumn Header="Не прошли" Binding="{Binding NotPassed}" Width="100" CanUserResize="True"/>
                                <DataGridTextColumn Header="Прошли %" Binding="{Binding PassedPercent}" Width="90" CanUserResize="True"/>
                                <DataGridTemplateColumn Header="Не прошли %" Width="110" CanUserResize="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding NotPassedPercent}" FontSize="11" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <TabItem Header="💊 Отчет по медикаментам">
                    <Border Background="White"
                            Padding="15"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DataGrid ItemsSource="{Binding ReportMedicins}"
                                 SelectedItem="{Binding SelectedReportMedicin}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 SelectionMode="Single"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="All"
                                 AlternatingRowBackground="#F5F7FA"
                                 CanUserResizeColumns="True"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата начала" Binding="{Binding DataStart, StringFormat='dd.MM.yyyy'}" Width="120" CanUserResize="True"/>
                                <DataGridTextColumn Header="Дата окончания" Binding="{Binding DataEnd, StringFormat='dd.MM.yyyy'}" Width="120" CanUserResize="True"/>
                                <DataGridTextColumn Header="Всего медикаментов" Binding="{Binding TotalMedicines}" Width="140" CanUserResize="True"/>
                                <DataGridTextColumn Header="Уникальных" Binding="{Binding TotalUniqueMedicines}" Width="100" CanUserResize="True"/>
                                <DataGridTextColumn Header="Аптечек" Binding="{Binding TotalMedkit}" Width="80" CanUserResize="True"/>
                                <DataGridTextColumn Header="Просрочено" Binding="{Binding ExpiredCount}" Width="100" CanUserResize="True"/>
                                <DataGridTextColumn Header="Скоро истечет" Binding="{Binding AlmostExpiredCount}" Width="120" CanUserResize="True"/>
                                <DataGridTemplateColumn Header="Просрочено %" Width="110" CanUserResize="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ExpiredCountPercent}" FontSize="11" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Скоро истечет %" Width="130" CanUserResize="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding AlmostExpiredCountPercent}" FontSize="11" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
