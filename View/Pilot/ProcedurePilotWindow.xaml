<Window x:Class="MedicalAir.View.Pilot.ProcedurePilotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalAir.View.Pilot"
        xmlns:converters="clr-namespace:MedicalAir.Helper.Converters"
        mc:Ignorable="d"
        Title="MedicalAir - Процедуры"
        Icon="pack://application:,,,/icon.png"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">
    <Grid>
        
        <Border Background="#F3F3F3"
                Height="50"
                VerticalAlignment="Top"
                BorderBrush="#D0D0D0"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0">
                    <TextBlock Text="MedicalAir"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#4299e1"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" - Процедуры"
                               FontSize="18"
                               Foreground="#666"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <Button x:Name="LogoutButton"
                        Grid.Column="1"
                        Content="🚪 Выйти из аккаунта"
                        Width="180"
                        Height="40"
                        Margin="0,0,30,0"
                        Background="#f56565"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="LogoutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f56565"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e53e3e"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Border Background="White"
                Width="250"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                Margin="0,70,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Margin="15,20,15,20">
                <TextBlock Text="Навигация"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#4299e1"
                           Margin="0,0,0,20"/>
                
                <Button x:Name="MainPageButton"
                        Content="🏠 Главная"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="MainPageButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="InfoButton"
                        Content="ℹ️ Информация"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="InfoButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="RegButton"
                        Content="📋 Регистрации"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="RegButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="ProcedureButton"
                        Content="⚙️ Процедуры"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#4299e1"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4299e1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3182ce"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="NotificationButton"
                        Content="🔔 Уведомления"
                        Height="50"
                        Margin="0,0,0,10"
                        Background="#e2e8f0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="NotificationButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e2e8f0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#cbd5e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        
        <Grid Margin="280,90,20,20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Border Background="White" Padding="15" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <DataGrid ItemsSource="{Binding Procedures}"
                         SelectedItem="{Binding SelectedProcedure}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         HeadersVisibility="Column"
                         GridLinesVisibility="All"
                         AlternatingRowBackground="#F5F7FA">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Процедура" Binding="{Binding Procedure.Name}" Width="200"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Procedure.Description}" Width="*"/>
                        <DataGridTemplateColumn Header="Тип" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center">
                                        <TextBlock.Text>
                                            <Binding Path="Procedure.MustBeTrue">
                                                <Binding.Converter>
                                                    <converters:BoolToTestConverter/>
                                                </Binding.Converter>
                                            </Binding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Пройдена" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding UserProcedure.IsValid}" IsEnabled="False" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Действие" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✅ Пройти" 
                                           Command="{Binding DataContext.PassProcedure, RelativeSource={RelativeSource AncestorType=Window}}"
                                           CommandParameter="{Binding}"
                                           Width="120"
                                           Height="30"
                                           Background="#4299e1"
                                           Foreground="White"
                                           BorderThickness="0"
                                           FontSize="12"
                                           Cursor="Hand"
                                           IsEnabled="{Binding CanPass}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#4299e1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#cbd5e0"/>
                                                        <Setter Property="Foreground" Value="#666"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#3182ce"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
